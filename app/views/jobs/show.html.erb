<div>
  <ul class="breadcrumb">
    <li>
      <a href="#">Home</a>
    </li>
    <li>
      <a href="#"> Manage Activity</a>
    </li>
  </ul>
</div>
<div class="row">
  <div class="box col-md-12">
    <div class="box-inner">
      <div class="box-header well" data-original-title="">
        <h2><i class="glyphicon glyphicon-user"></i> Activities For Inner Vessel</h2>

        <div class="box-icon">
          <a href="#" class="btn btn-minimize btn-round btn-default"><i
									class="glyphicon glyphicon-chevron-up"></i></a>
          <a href="#" class="btn btn-close btn-round btn-default"><i
								     class="glyphicon glyphicon-remove"></i></a>
        </div>
      </div>
      <div class="box-content">
        <div class="box col-md-6">
          <div class="box-inner">
            <div class="box-header well" data-original-title="">
              <h2><i class="glyphicon glyphicon-th"></i> Project</h2>

              <div class="box-icon">
                <a href="#" class="btn btn-setting btn-round btn-default">
		  <i class="glyphicon glyphicon-cog"></i>
		</a>
                <a href="#" class="btn btn-minimize btn-round btn-default">
		  <i class="glyphicon glyphicon-chevron-up"></i>
		</a>
                <a href="#" class="btn btn-close btn-round btn-default">
		  <i class="glyphicon glyphicon-remove"></i>
		</a>
              </div>
            </div>
            <div class="box-content">
              <div class="row">
                <div class="col-sm-8">
                  <select class="form-control">
                    <option>12T40K01</option>
                    <option>12T40K02</option>
                    <option>12T20K01</option>
                  </select>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="box col-md-6">
          <div class="box-inner">
            <div class="box-header well" data-original-title="">
              <h2><i class="glyphicon glyphicon-th"></i> Task</h2>

              <div class="box-icon">
                <a href="#" class="btn btn-setting btn-round btn-default">
		  <i class="glyphicon glyphicon-cog"></i>
		</a>
                <a href="#" class="btn btn-minimize btn-round btn-default">
		  <i class="glyphicon glyphicon-chevron-up"></i>
		</a>
                <a href="#" class="btn btn-close btn-round btn-default">
		  <i class="glyphicon glyphicon-remove"></i>
		</a>
              </div>
            </div>
            <div class="box-content">
              <div class="row">
                <div class="col-sm-8">
                  <select class="form-control">
                    <option>Inner Shell</option>
                    <option>Outer Shell</option>
                    <option>Assembly</option>
                  </select>
                </div>
              </div>
            </div>
          </div>
        </div>
        <table class="table table-striped table-bordered table-responsive">
          <thead>
            <tr>
              <th>Sr.No.</th>
              <th>Description</th>
              <th>Assigned To</th>
              <th>Precedence</th>
              <th>Duration</th>                            
              <th>Current Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
	    <%- activity = @master_activity   %>
	    <% while activity.present? %>
            <tr style="color:#000;">
              <td>1</td>
              <td class="center"><%= activity.activity.name %></td>
              <td class="center"><%= activity.user_name %></td>
              <td class="center"><%= activity.pre_activity.try(:activity).try(:name) %></td>
              <td class="center"><%= activity.duration %> Days</td>
              <td class="center">
                <span class="label-success label label-default"><%= activity.status %></span>
              </td>
              <td class="center">
                
                <a class="btn btn-info" href="#">
                  <i class="glyphicon glyphicon-arrow-up icon-white"></i>
                  
                </a>
                <a class="btn btn-info" href="#">
                  <i class="glyphicon glyphicon-arrow-down icon-white"></i>
                  
                </a>
                <a class="btn btn-info" href="#">
                  <i class="glyphicon glyphicon-edit icon-white"></i>
                  
                </a>
                <a class="btn btn-danger" href="#">
                  <i class="glyphicon glyphicon-trash icon-white"></i>
                  
                </a>
              </td>
            </tr>
	    <%- activity = activity.next_activity %>
            <%- end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <!--/span-->

</div><!--/row-->

